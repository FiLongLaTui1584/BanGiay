@model BanGiay.Context.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container1 {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        max-width: 1280px;
        margin: 0 auto 2em;
    }

    .styled {
        padding: 2em;
        box-shadow: 0 15px 70px -8px rgb(0 0 0 / 20%);
        border-radius: 20px;
        width: 95%
    }

    h2 {
        font-weight: bold;
        text-align: center;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1.5em;
        border-radius: 20px;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #808080;
        color: var(--white-color);
    }

    .btn {
        padding: 0.5em 1em;
        border: none;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
        margin-right: 0.5em;
        text-align: center;
        border-radius: 10px;
    }

    .btn-success {
        background-color: #28a745;
        color: var(--white-color);
    }

    .btn-dark {
        background-color: #343a40;
        color: var(--white-color);
    }
</style>

<div class="container1">
    <div class="styled">
        <h2>Chi tiết sản phẩm</h2>

        <hr />

        <table>
            <tr>
                <th>Mã sản phẩm</th>
                <td>@Html.DisplayFor(model => model.maSP)</td>
            </tr>
            <tr>
                <th>Tên sản phẩm</th>
                <td>@Html.DisplayFor(model => model.tenSP)</td>
            </tr>
            <tr>
                <th>Tình trạng sản phẩm</th>
                <td>@Html.DisplayFor(model => model.TinhTrangSP)</td>
            </tr>
            <tr>
                <th>Màu sắc</th>
                <td>@Html.DisplayFor(model => model.MauSac)</td>
            </tr>
            <tr>
                <th>Hình ảnh 1</th>
                <td>@Html.DisplayFor(model => model.HinhAnh1)</td>
            </tr>
            <tr>
                <th>Hình ảnh 2</th>
                <td>@Html.DisplayFor(model => model.HinhAnh2)</td>
            </tr>
            <tr>
                <th>Hình ảnh 3</th>
                <td>@Html.DisplayFor(model => model.HinhAnh3)</td>
            </tr>
            <tr>
                <th>Hình ảnh 4</th>
                <td>@Html.DisplayFor(model => model.HinhAnh4)</td>
            </tr>
            <tr>
                <th>Mô tả sản phẩm</th>
                <td>@Html.DisplayFor(model => model.MoTaSP)</td>
            </tr>
            <tr>
                <th>Giá gốc</th>
                <td>@Html.DisplayFor(model => model.GiaGoc)</td>
            </tr>
            <tr>
                <th>Giá giảm</th>
                <td>@Html.DisplayFor(model => model.GiaGiam)</td>
            </tr>
            <tr>
                <th>Số lượng bán</th>
                <td>@Html.DisplayFor(model => model.SLBan)</td>
            </tr>
            <tr>
                <th>Mã thương hiệu</th>
                <td>@Html.DisplayFor(model => model.MaTH)</td>
            </tr>
            <tr>
                <th>Loại sản phẩm</th>
                <td>@Html.DisplayFor(model => model.CatID)</td>
            </tr>
            <tr>
                <th>Mã đánh giá</th>
                <td>@Html.DisplayFor(model => model.maDanhgia)</td>
            </tr>
            <tr>
                <th>Mã size</th>
                <td>@Html.DisplayFor(model => model.maSize)</td>
            </tr>
        </table>

        <p style="margin-top:20px">
            @Html.ActionLink("Sửa", "Edit", new { id = Model.maSP }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-dark" })
        </p>
    </div>
</div>
