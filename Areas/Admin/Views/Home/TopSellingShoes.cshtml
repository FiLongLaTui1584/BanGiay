@model IEnumerable<BanGiay.Areas.Admin.Model.TopSellingShoesViewModel>
@{
    ViewBag.Title = "Top Selling Shoes";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .container1 {
        display: flex;
        margin: 0 auto;
        max-width: 1280px;
    }

    .menu {
        width: 210px;
        background-color: #f8f9fa;
        padding: 1em;
        box-shadow: 0 15px 70px -8px rgb(0 0 0 / 20%);
        border-radius: 10px;
        margin: 32px 0 32px 32px;
    }

        .menu a {
            display: block;
            padding: 10px;
            text-decoration: none;
            color: #343a40;
            font-weight: bold;
            margin-bottom: 5px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .menu a:hover {
                background-color: #e9ecef;
            }

    .content {
        flex-grow: 1;
        padding: 2em 0 2em 1em;
    }

    .styled {
        padding: 2em;
        box-shadow: 0 15px 70px -8px rgb(0 0 0 / 20%);
        border-radius: 20px;
        width: 95%;
    }

    h2 {
        font-weight: bold;
        text-align: center;
    }

    .search-container {
        display: flex;
        align-items: center;
        margin: 20px 0;
    }

        .search-container input[type="text"], .filter-container select {
            padding: 10px;
            font-size: 16px;
            border: 2px solid #ddd;
            border-radius: 20px;
            outline: none;
            width: 200px;
            transition: all 0.3s ease;
            margin-right: 10px;
        }

        .search-container button, .filter-container button {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 20px;
            background-color: #28a745;
            color: #fff;
            cursor: pointer;
            transition: all 0.3s ease;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1.5em;
        border-radius: 20px;
    }

        .table th, .table td {
            border: 1px solid var(--border-color);
            padding: 0.75em;
            text-align: left;
        }

        .table th {
            background-color: var(--primary-color);
            color: var(--white-color);
        }

    .btn {
        padding: 0.5em 1em;
        border: none;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
        margin-right: 0.5em;
        text-align: center;
        border-radius: 20px;
    }

    .btn-success {
        background-color: #28a745;
        color: var(--white-color);
    }

    .btn-dark {
        background-color: #343a40;
        color: var(--white-color);
    }

    .btn-danger {
        background-color: #dc3545;
        color: var(--white-color);
    }
</style>


<div class="container1">
    <div class="menu">
        <a href="@Url.Action("Index", "Home")">Danh sách sản phẩm</a>
        <a href="@Url.Action("Index", "User")">Danh sách tài khoản</a>
        <a href="@Url.Action("TopSellingShoes", "Home")">Xem doanh thu</a>
        <a href="@Url.Action("Index", "OrderManagement")">Quản lý đơn hàng</a>
    </div>

    <div class="content">
        <div class="styled">
            <h2>Doanh thu</h2>
            <hr />

            <div class="filter-container search-container">
                <select id="month" name="month">
                    <option value="">Chọn tháng</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <select id="day" name="day">
                    <option value="">Chọn ngày</option>
                    @for (int i = 1; i <= 31; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <button type="button" onclick="applyFilter()">Áp dụng</button>
            </div>

            <div class="search-container">
                <input type="text" id="searchBox" placeholder="Tìm kiếm sản phẩm..." />
                <button type="button" onclick="searchShoes()">Tìm kiếm</button>
            </div>

            <div id="shoesList">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng đã bán</th>
                            <th>Tổng doanh thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.QuantitySold</td>
                                <td>@item.TotalRevenue.ToString("#,##0").Replace(',', '.') VND</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <script>
        function searchShoes() {
            var query = $('#searchBox').val();
            $.ajax({
                url: '@Url.Action("SearchTopSellingShoes", "Home")',
                type: 'GET',
                data: { query: query },
                success: function (data) {
                    $('#shoesList').html(data);
                }
            });
        }
    </script>

    <script>
        function applyFilter() {
            var month = $('#month').val();
            var day = $('#day').val();
            var query = $('#searchBox').val();
            $.ajax({
                url: '@Url.Action("FilterTopSellingShoes", "Home")',
                type: 'GET',
                data: { month: month, day: day, query: query },
                success: function (data) {
                    $('#shoesList').html(data);
                }
            });
        }

        function searchShoes() {
            applyFilter();
        }
    </script>

}



