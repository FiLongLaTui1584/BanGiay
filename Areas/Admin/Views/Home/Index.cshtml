@model IEnumerable<BanGiay.Context.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .container1 {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        max-width: 1280px;
        margin: 0 auto 2em;
    }

    .styled {
        padding: 2em;
        box-shadow: 0 15px 70px -8px rgb(0 0 0 / 20%);
        border-radius:20px;
        width:95%
    }

    h2 {
        font-weight: bold;
        text-align: center;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1.5em;
        border-radius: 20px;
    }

        .table th, .table td {
            border: 1px solid var(--border-color);
            padding: 0.75em;
            text-align: left;
        }

        .table th {
            background-color: var(--primary-color);
            color: var(--white-color);
        }

    .btn {
        padding: 0.5em 1em;
        border: none;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
        margin-right: 0.5em;
        text-align: center;
        border-radius:10px;
    }

    .btn-success {
        background-color: #28a745;
        color: var(--white-color);
    }

    .btn-dark {
        background-color: #343a40;
        color: var(--white-color);
    }

    .btn-danger {
        background-color: #dc3545;
        color: var(--white-color);
    }
</style>

<div class="container1">
    <div class="styled">
        <h2>Danh sách sản phẩm</h2>
        <hr />

        <p style="margin:10px 0 10px 0">
            @Html.ActionLink("Thêm sản phẩm", "Create", null, new { @class = "btn btn-success" })
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Mã sản phẩm
                    </th>
                    <th>
                        Tên sản phẩm
                    </th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.maSP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tenSP)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.maSP }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.maSP }, new { @class = "btn btn-dark" }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.maSP }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
