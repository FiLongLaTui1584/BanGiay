@model IEnumerable<BanGiay.Context.HoaDon>

@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .container1 {
        display: flex;
        margin: 0 auto;
        max-width: 1280px;
    }

    .menu {
        background-color: #f8f9fa;
        padding: 1em;
        box-shadow: 0 15px 70px -8px rgb(0 0 0 / 20%);
        border-radius: 10px;
        margin: 32px 0 32px 32px;
        width: 240px;
    }

        .menu a {
            display: block;
            padding: 10px;
            text-decoration: none;
            color: #343a40;
            font-weight: bold;
            margin-bottom: 5px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .menu a:hover {
                background-color: #e9ecef;
            }

    .content {
        flex-grow: 1;
        padding: 2em 0 2em 1em;
    }

    .styled {
        padding: 2em;
        box-shadow: 0 15px 70px -8px rgb(0 0 0 / 20%);
        border-radius: 20px;
        width: 95%;
    }

    h2 {
        font-weight: bold;
        text-align: center;
    }

    .search-container {
        display: flex;
        align-items: center;
        margin: 20px 0;
    }

        .search-container input[type="text"] {
            padding: 10px;
            font-size: 16px;
            border: 2px solid #ddd;
            border-radius: 10px 0 0 10px;
            outline: none;
            width: 300px;
            transition: all 0.3s ease;
        }

        .search-container button {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 0 10px 10px 0;
            background-color: #28a745;
            color: #fff;
            cursor: pointer;
            transition: all 0.3s ease;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1.5em;
        border-radius: 20px;
        margin-top: 25px;
    }

        .table th, .table td {
            border: 1px solid var(--border-color);
            padding: 0.75em;
            text-align: left;
        }

        .table th {
            background-color: var(--primary-color);
            color: var(--white-color);
        }

    .btn {
        padding: 0.5em 1em;
        border: none;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
        margin-right: 0.5em;
        text-align: center;
        border-radius: 10px;
    }

    .btn-success {
        background-color: #28a745;
        color: var(--white-color);
    }

    .btn-dark {
        background-color: #343a40;
        color: var(--white-color);
    }

    .btn-danger {
        background-color: #dc3545;
        color: var(--white-color);
    }
</style>

<div class="container1">
    <div class="menu">
        <a href="@Url.Action("Index", "Home")">Danh sách sản phẩm</a>
        <a href="@Url.Action("Index", "User")">Danh sách tài khoản</a>
        <a href="@Url.Action("TopSellingShoes", "Home")">Xem doanh thu</a>
        <a href="@Url.Action("Index", "OrderManagement")">Quản lý đơn hàng</a>
    </div>

    <div class="content">
        <div class="styled">
            <h2>Quản lý đơn hàng</h2>
            <hr />

            <table class="table">
                <thead>
                    <tr>
                        <th>Mã Đơn</th>
                        <th>Ngày Đặt</th>
                        <th>Tên Người Mua</th>
                        <th>Địa Chỉ</th>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Tổng Tiền</th>
                        <th>Trạng Thái</th>
                        <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        foreach (var detail in order.ChiTietHoaDons)
                        {
                            <tr>
                                <td>@order.maHD</td>
                                <td>@order.NgayDat.ToString("dd/MM/yyyy")</td>
                                <td>@order.User.TenTK</td>
                                <td>@order.diaChi</td>
                                <td>@detail.SanPham.tenSP</td>
                                <td>@detail.SoLuong</td>
                                <td>@detail.GiaTien</td>
                                <td>@(detail.GiaTien * detail.SoLuong)</td>
                                <td>@order.TrangThai</td>
                                <td>
                                    @if (order.TrangThai == "Chờ xác nhận")
                                    {
                                        @Html.ActionLink("Xác nhận", "ConfirmOrder", new { id = order.maHD }, new { @class = "btn btn-success" })
                                        @Html.ActionLink("Từ chối", "RejectOrder", new { id = order.maHD }, new { @class = "btn btn-danger" })
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
