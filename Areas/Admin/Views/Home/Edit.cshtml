@model BanGiay.Context.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style>
    .container1 {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        max-width: 1280px;
        margin: 0 auto 2em;
    }

    .styled {
        padding: 2em;
        box-shadow: 0 15px 70px -8px rgb(0 0 0 / 20%);
        border-radius: 20px;
        width: 95%
    }

    h2 {
        font-weight: bold;
        text-align: center;
    }

    .form-horizontal {
        margin-top: 2em;
    }

    .form-group {
        margin-bottom: 1.5em;
    }

    .control-label {
        font-weight: bold;
    }

    .btn {
        padding: 0.5em 1em;
        border: none;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
        margin-right: 0.5em;
        text-align: center;
        border-radius: 10px;
    }

    .btn-success {
        background-color: #28a745;
        color: var(--white-color);
    }

    .btn-dark {
        background-color: #343a40;
        color: var(--white-color);
    }
</style>



<div class="container1">
    <div class="styled">
        <h2>Sửa sản phẩm</h2>

