                @Html.DisplayFor(modelItem => item.SLBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhAnh2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhAnh3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhAnh4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaGiam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.NameCate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DanhGia.comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KichCo.maSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThuongHieuSP.TenTH)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.maSP }) |
                @Html.ActionLink("Details", "Details", new { id = item.maSP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.maSP })
            </td>
        </tr>
