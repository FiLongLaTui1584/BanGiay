@model BanGiay.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<style>
    .container1 {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        max-width: 1280px;
        margin: 0 auto;
    }

    .checkout {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 3em 0;
        width: 100%;
    }

        .checkout .left.styled {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            max-width: 500px;
            border-radius: 8px;
        }

    form p {
        display: flex;
        flex-direction: column;
        margin-bottom: 1em;
    }

    .checkout .left h1 {
        font-weight: bold;
        margin-bottom: 0.5em;
    }

    .form-control.input {
        width: 350px;
    }

    .primary-checkout {
        display: flex;
        justify-content: center;
    }

    .primary-button {
        display: block;
        border: 0;
        outline: 0;
        cursor: pointer;
        width: 300px;
        font-size: 1.2em;
        padding: 0.5em 0;
        background-color: var(--primary-color);
        color: var(--white-color);
        text-align: center;
    }

    .primary-checkout button {
        display: block;
        border: 0;
        outline: 0;
        cursor: pointer;
        max-width: 350px;
        margin-top: 0.5em;
        font-size: 1.2em;
    }
</style>



<div class="container1">
    <div class="checkout">
        <div class="item left styled">
            <h1>Đăng nhập</h1>


            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <p>
                        <h4 style="margin-bottom:0.5em;">Nhập email của bạn: </h4>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </p>
                </div>
                <div class="form-group">
                    <p>
                        <h4 style="margin-bottom:0.5em;">Nhập mật khẩu của bạn: </h4>
                        @Html.PasswordFor(m => m.Pass, new { @class = "form-control input" })
                        @Html.ValidationMessageFor(m => m.Pass, "", new { @class = "text-danger" })
                    </p>
                </div>


                <div class="primary-checkout">
                    <button type="submit" class="primary-button">Đăng nhập</button>
                </div>
            }
        </div>
    </div>
</div>