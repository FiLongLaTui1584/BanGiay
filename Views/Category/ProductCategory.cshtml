@model BanGiay.Models.ViewModel
@{
    ViewBag.Title = "ProductCategory";
}

<div class="features">
    <div class="container">
        <div class="wrapper">
            @if (Model.ThuongHieuSP.Any())
            {
                var firstBrand = Model.ThuongHieuSP.First();
                <div class="breadcrumb">
                    <ul class="flexitem">
                        <li><a href="\">Trang chủ</a></li>
                        <li><a href="@Url.Action("ProductCategoryByBrand", "Category", new { MaTH = firstBrand.MaTH })">@firstBrand.TenTH</a></li>
                        <li><a href="#">@Model.Category1.NameCate</a></li>
                    </ul>
                </div>
            }
            <div class="column">
                <div class="sectop flexitem">
                    <h2><span class="circle"></span><span>TẤT CẢ SẢN PHẨM</span></h2>
                </div>
                <div class="products main flexwrap">
                    @foreach (var item in Model.SanPham)
                    {
                        <div class="item">
                            <div class="media">
                                <div class="thumbnail object-cover">
                                    <a href="@Url.Action("Detail", "Product", new { maSP = item.maSP })">
                                        <img src="@Url.Content( "~/Content/Image/SanPham/" +item.HinhAnh1)" />
                                    </a>
                                </div>
                                <div class="hoverable">
                                    <ul>
                                        <li class="active"><a href="#"><i class="ri-heart-line"></i></a></li>
                                        <li>
                                            <a href="@Url.Action("Detail", "Product", new { maSP = item.maSP })">
                                                <i class="ri-eye-line"></i>
                                            </a>
                                        </li>
                                        <li><a href="#"><i class="ri-shuffle-line"></i></a></li>
                                    </ul>
                                </div>
                                <div class="discount circle flexcenter"><span>@item.giamGia%</span></div>
                            </div>
                            <div class="content">
                                <div class="rating">
                                    <div class="stars"></div>
                                    <div class="stars"></div>
                                    <div class="stars"></div>
                                    <div class="stars"></div>
                                    <div class="stars"></div>
                                    <span class="mini-text">@item.SLBan đã bán</span>
                                </div>
                                <h3><a href="@Url.Action("Detail", "Product", new { maSP = item.maSP })">@item.tenSP</a></h3>
                                <div class="price">
                                    <span class="current">@item.GiaGiam.ToString("#,##0").Replace(',', '.')đ</span>
                                    <span class="normal mini-text">@item.GiaGoc.ToString("#,##0").Replace(',', '.')đ </span>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

